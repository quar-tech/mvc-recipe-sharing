<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Recipe:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">recipe name:</label>
        <input class="delta" type="text" id="recipe-name" name="recipe-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">ingredients:</label>
        <textarea class="delta" id="recipe-ingredients" name="recipe-ingredients"></textarea>
      </div>
      <div class="form-group">
        <label for="project-desc">description:</label>
        <textarea class="delta" id="recipe-desc" name="recipe-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn echo">Create</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 project-list">
    <h3>Current Recipes:</h3>

    {{#each recipes as |recipe|}}
    <div class="row mb-2 mt-3">
      <div class="col-md-8">
        <h4><a class="foxtrot" href="/recipes/{{recipe.id}}">{{recipe.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm echo" data-id="{{recipe.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
